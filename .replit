modules = ["web", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "glibcLocales", "libiconv", "libxcrypt", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export MAYTAPI_PRODUCT_ID=\"${MAYTAPI_PRODUCT_ID}\" && export MAYTAPI_TOKEN=\"${MAYTAPI_TOKEN}\" && export SECRET_KEY=\"${SECRET_KEY}\" && export WHATSAPP_VERIFY_TOKEN=\"${WHATSAPP_VERIFY_TOKEN}\" && export ENVIRONMENT=\"production\" && uv run python main.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46255
externalPort = 3000

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["uv", "run", "python", "main.py"]
